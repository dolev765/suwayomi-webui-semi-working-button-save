<%= tag.div class: "popup-menu inline-flex items-center h-full #{classes}".strip, "data-hide-on-click": hide_on_click do %>
  <%= link_to "javascript:void(0)", class: ["popup-menu-button", button_classes], "x-on:mousedown.prevent": true, **button_html do %>
    <% if button.present? %>
      <%= button %>
    <% else %>
      <%= helpers.ellipsis_icon %>
    <% end %>
  <% end %>

  <ul class="popup-menu-content">
    <% items.each do |item| %>
      <%= item %>
    <% end %>
  </ul>
<% end %>
